{
  "version": 2,
  "buildCommand": "npm run build:simple",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm run install:all",
  "functions": {
    "backend/api/index.ts": {
      "includeFiles": "backend/prisma/schema.prisma,backend/prisma/**,backend/node_modules/@prisma/**,backend/node_modules/.prisma/**",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}