{
  "version": 2,
  "buildCommand": "npm run build:simple",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm run install:all",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index?path=$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}